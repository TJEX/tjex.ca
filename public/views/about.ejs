<!-- view/about.ejs -->
<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/nav') %>
    <section class="section">
      <div class="container">
        <h1 class="title is-4">History</h1>
        <p>Toronto Japanese Exchange (TJEX) was founded in 2007.
      </div>
    </section>
    <section class="section">
      <div class="container">
        <h1 class="title is-4">Staff & Organizers</h1>
        <div class="columns is-mobile is-multiline is-centered is-6">
          <% staff.forEach(function (member) { %>
          <% if (member.main) { %>
          <div class="column staff-card main-staff is-full-mobile is-half-tablet">
            <div class="box">
              <div class="columns">
                <div class="image column">
                  <% if (member.image) { %>
                  <img class="is-rounded" src="<%= member.image %>" />
                  <% } else { %>
                  <i class="far fa-smile has-text-grey-lighter"></i>
                  <% } %>
                </div>
                <div class="info column has-text-centered-mobile">
                  <h1 class="title has-subtitle is-6">
                    <a href="<%= member.link %>" target="_blank"><%= member.name %></a>
                  </h1>
                  <h3 class="subtitle is-7 has-text-grey">
                    <%= member.position || "Organizer" %>
                  </h3>
                  <% if (member.message) { %>
                  <p class="has-text-grey-dark">
                  <%= member.message %>
                  </p>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
          <% } else { %>
          <div class="column staff-card is-half-mobile is-one-third-tablet is-one-third-desktop is-one-quarter-widescreen">
            <div class="box has-text-centered">
              <div class="image">
                <% if (member.image) { %>
                <img class="is-rounded" src="<%= member.image %>" />
                <% } else { %>
                <i class="far fa-smile has-text-grey-lighter"></i>
                <% } %>
              </div>
              <h1 class="title has-subtitle is-6">
                <a href="<%= member.link %>" target="_blank"><%= member.name %></a>
              </h1>
              <h3 class="subtitle is-7 has-text-grey">
                <%= member.position || "Organizer" %>
              </h3>
              <% if (member.message) { %>
              <p class="has-text-grey-dark">
              <%= member.message %>
              </p>
              <% } %>
            </div>
          </div>
          <% } %>
          <% }) %>
        </div>
      </div>
    </section>
  </body>
</html>

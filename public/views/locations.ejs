<!-- views/locations.ejs -->
<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/nav') %>
    <section class="section">
      <div class="container">
        <h1 class="title is-4">Locations</h1>
        <p>These are the current meetup locations for our weekly language exchanges.
        If you have any problems finding the right place, contact the organizer of the meetup you are attending through the Meetup app.
        </p>
        <br/>
        <div class="columns is-desktop">
          <% LOCATIONS.forEach(function(location) { %>
          <div class="column">
            <div class="box">
              <div class="container">
                <h1 class="title has-subtitle is-5"><%= location.name %></h1>
                <h3 class="subtitle is-6 has-text-grey"><%= location.address %></h1>
                <% if (location.directions) { %>
                <p><%= location.directions %></p>
                <br/>
                <% } %>
                <iframe
                    width="100%"
                    height="450"
                    src="https://www.google.com/maps/embed/v1/place?q=<%= location.query %>&key=<%= GOOGLE_MAPS_API_KEY %>&zoom=17"
                    allowfullscreen>
                </iframe>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>
  </body>
</html>
